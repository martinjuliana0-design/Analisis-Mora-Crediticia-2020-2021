Medidas DAX 
%MORA = DIVIDE([MONTO EN MORA],[MONTO TOTAL],0)

CLIENTES EN MORA = CALCULATE(DISTINCTCOUNT(FACT_PRESTAMOS[ID_CLIENTE]),DIM_ESTADO[ESTADO_CREDITO]="ATRASADO")

MONTO EN MORA = CALCULATE([MONTO TOTAL],DIM_ESTADO[ESTADO_CREDITO]="ATRASADO")

MONTO TOTAL = SUM(FACT_PRESTAMOS[MONTO])

PRESTAMOS EN MORA = CALCULATE([TOTAL_PRESTAMOS],DIM_ESTADO[ESTADO_CREDITO]="MORA")

TOTAL_PRESTAMOS = COUNTROWS(FACT_PRESTAMOS)

TABLA CALENDARIO = ADDCOLUMNS(
    CALENDAR (MIN(FACT_PRESTAMOS[FECHA_OTORGAMIENTO]), MAX(FACT_PRESTAMOS[FECHA_OTORGAMIENTO])),
    "AÑO", YEAR([Date]),
    "Mes numero", MONTH([Date]),
    "MES", FORMAT([Date],"MMMM"),
    "Año-Mes", FORMAT([Date],"YYYY-MM"),
    "Trimeste", "T" & FORMAT([Date],"Q"),
    "DIA",DAY(([Date])
))

AHORRO ESTIMADO = [Monto riesgo alto]*0.20

% INDICE DE MORA = DIVIDE([MONTO EN MORA],[MONTO TOTAL],0)

Color Alerta Forecast = 
e
VAR UmbralPorcentaje = 0.50 
VAR PorcentajeActual = [% INDICE DE MORA] 
RETURN
    IF (
        ISBLANK(PorcentajeActual), 
        "#D3D3D3", -- Gris
        IF (
            PorcentajeActual >= UmbralPorcentaje, 
            "#FF0000", -- Rojo (Peligro)
            "#00B050"  -- Verde (Bajo control)
        )
    )
